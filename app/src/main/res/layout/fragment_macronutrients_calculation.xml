<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".ui.view.Prediction.CaloriePredictionFragment">

    <!--    <ImageView-->
    <!--        android:id="@+id/imageBody"-->
    <!--        android:layout_marginHorizontal="10dp"-->
    <!--        android:layout_width="wrap_content"-->
    <!--        android:layout_height="180dp"-->
    <!--        android:layout_marginTop="10dp"-->
    <!--        app:srcCompat="@drawable/bodybro" />-->

    <!-- Layout Utama -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="10dp"
        android:layout_marginTop="30dp"
        android:background="@drawable/draw_back_input"
        android:elevation="5dp"
        android:orientation="vertical"
        android:padding="16dp">

        <EditText
            android:id="@+id/inputWeight"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:background="@drawable/draw_back_color"
            android:fontFamily="@font/poppins_medium"
            android:hint="Enter Weight (kg)"
            android:inputType="numberDecimal"
            android:padding="10dp"
            android:textColor="@color/black"
            android:textColorHint="@color/black" />

        <EditText
            android:id="@+id/inputHeight"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:background="@drawable/draw_back_color"
            android:fontFamily="@font/poppins_medium"
            android:hint="Enter Height (cm)"
            android:inputType="numberDecimal"
            android:padding="10dp"
            android:textColor="@color/black"
            android:textColorHint="@color/black" />

        <EditText
            android:id="@+id/inputAge"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:background="@drawable/draw_back_color"
            android:fontFamily="@font/poppins_medium"
            android:hint="Enter Age"
            android:inputType="numberDecimal"
            android:padding="10dp"
            android:textColor="@color/black"
            android:textColorHint="@color/black" />

        <Spinner
            android:id="@+id/spinnerGoals"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp" />

        <Button
            android:id="@+id/buttonSubmit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="10dp"
            android:backgroundTint="@color/green2"
            android:fontFamily="@font/poppins_medium"
            android:text="Macronutrients Calculation"
            android:textColor="@color/white" />

        <TextView
            android:id="@+id/textViewProtein"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:background="@drawable/draw_back_color"
            android:fontFamily="@font/poppins_medium"
            android:padding="10dp"
            android:textColor="@color/black" />

        <TextView
            android:id="@+id/textViewFat"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:background="@drawable/draw_back_color"
            android:fontFamily="@font/poppins_medium"
            android:padding="10dp"
            android:textColor="@color/black" />

        <TextView
            android:id="@+id/textViewCarbs"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:background="@drawable/draw_back_color"
            android:fontFamily="@font/poppins_medium"
            android:padding="10dp"
            android:textColor="@color/black" />
    </LinearLayout>
</FrameLayout>
