<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.view.Prediction.CaloriePredictionFragment">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white">

        <ImageView
            android:id="@+id/imageInput"
            android:layout_width="wrap_content"
            android:layout_height="200dp"
            android:layout_marginTop="30dp"
            android:src="@drawable/input" />

        <!-- Layout lainnya (EditText, Button, dll) -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="10dp"
            android:layout_marginTop="235dp"
            android:background="@drawable/draw_back_input"
            android:elevation="5dp"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Input Protein -->
            <EditText
                android:id="@+id/inputProtein"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/draw_back_color"
                android:fontFamily="@font/poppins_medium"
                android:hint="Enter Protein (g)"
                android:inputType="numberDecimal"
                android:padding="12dp"
                android:textColor="@color/black"
                android:textColorHint="@color/black" />

            <!-- Input Fat -->
            <EditText
                android:id="@+id/inputFat"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:background="@drawable/draw_back_color"
                android:fontFamily="@font/poppins_medium"
                android:hint="Enter Fat (g)"
                android:inputType="numberDecimal"
                android:padding="12dp"
                android:textColor="@color/black"
                android:textColorHint="@color/black" />

            <!-- Input Carbohydrate -->
            <EditText
                android:id="@+id/inputCarbohydrate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:background="@drawable/draw_back_color"
                android:fontFamily="@font/poppins_medium"
                android:hint="Enter Carbohydrates (g)"
                android:inputType="numberDecimal"
                android:padding="12dp"
                android:textColor="@color/black"
                android:textColorHint="@color/black" />

            <!-- Button Submit -->
            <Button
                android:id="@+id/buttonSubmit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:backgroundTint="@color/green2"
                android:fontFamily="@font/poppins_medium"
                android:text="Calories Prediction"
                android:textColor="@color/white"
                android:textColorHint="@color/white" />

            <!-- Hasil Prediksi -->
            <TextView
                android:id="@+id/textView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:fontFamily="@font/poppins_medium"
                android:text="Prediction Result"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:textColorHint="@color/black"
                android:textSize="16sp" />

        </LinearLayout>

        <!-- FAB Button -->
        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/fabShowData"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:layout_marginTop="170dp"
            android:layout_marginEnd="16dp"
            android:backgroundTint="@color/green2"
            android:src="@drawable/history" />
    </FrameLayout>

</androidx.coordinatorlayout.widget.CoordinatorLayout>
